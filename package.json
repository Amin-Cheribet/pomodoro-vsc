{
    "name": "pomodoro",
    "displayName": "Pomodoro",
    "description": "Pomodoro timer with sound notifications",
    "publisher": "Amin",
    "version": "0.3.1",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pomodoro.start",
                "title": "Start Pomodoro"
            },
            {
                "command": "pomodoro.continue",
                "title": "Continue Pomodoro"
            },
            {
                "command": "pomodoro.pause",
                "title": "Pause Pomodoro"
            },
            {
                "command": "pomodoro.reset",
                "title": "Reset Pomodoro"
            },
            {
                "command": "pomodoro.stop",
                "title": "Stop Pomodoro"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Pomodoro Configuration",
            "properties": {
                "pomodoro.notificationVolume": {
                    "type": "number",
                    "default": 100,
                    "description": "Sound Notifications volume"
                },
                "pomodoro.breakTime": {
                    "type": "number",
                    "default": 5,
                    "description": "Time of break, in minutes"
                },
                "pomodoro.breakColorTime": {
                    "type": "string",
                    "default": "green",
                    "description": "Remaining time color when on a break"
                },
                "pomodoro.breakColorButton": {
                    "type": "string",
                    "default": "green",
                    "description": "Buttons color when on a break"
                },
                "pomodoro.workTime": {
                    "type": "number",
                    "default": 25,
                    "description": "Time of work, in minutes"
                },
                "pomodoro.workColorTime": {
                    "type": "string",
                    "default": "red",
                    "description": "Remaining time color when working"
                },
                "pomodoro.workColorButton": {
                    "type": "string",
                    "default": "red",
                    "description": "Buttons color when working"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "keywords": [
        "Pomodoro",
        "Timer",
        "sound"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Amin-Cheribet/pomodoro-vsc.git"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.59.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "dependencies": {
        "play-sound": "^1.1.3"
    }
}
